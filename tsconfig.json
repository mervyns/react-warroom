{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build/dist",
    "target": "es5",
    "lib": [
      "es2017",
      "es6",
      "dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "noUnusedLocals": true
  },
  "include": [
    "src"
  ]
}
